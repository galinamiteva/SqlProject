<UserControl x:Class="Presentation.Views.AddressListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             
              xmlns:viewmodels="clr-namespace:Presentation.ViewModels"
            xmlns:views="clr-namespace:Presentation.Views"
             xmlns:models="clr-namespace:Infrastructure.Dtos;assembly=Infrastructure"
            d:DataContext="{d:DesignInstance Type=viewmodels:AddressListViewModel}"
             
             
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">


    <UserControl.Resources>
        <CollectionViewSource x:Key="AddressCollectionViewSource" Source="{Binding AddressList}"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="Street name" />
                <TextBox Grid.Column="0" Text="{Binding Address.StreetName}" Name="StreetName" Padding="10" Margin="0 0 10 0" />
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Label Content="Postal code" />
                <TextBox Grid.Column="1" Text="{Binding Address.PostalCode}" Padding="10" Margin="0 0 10 0" />
            </StackPanel>

            <StackPanel Grid.Column="2">
                <Label Content="City" />
                <TextBox Grid.Column="2" Text="{Binding Address.City}" Padding="10" Margin="0 0 10 0" />
            </StackPanel>

            <Button Grid.Column="3" HorizontalAlignment="Right" Content="Add new address" Command="{Binding AddAddressCommand}" Height="50" Width="150" Margin="0,15,0, 0"  Background="LavenderBlush" />
        </Grid>


        <ListView Grid.Row="1" ItemsSource="{Binding Source={StaticResource AddressCollectionViewSource}}" HorizontalContentAlignment="Stretch" Foreground="Black">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Street Name" DisplayMemberBinding="{Binding StreetName}" Width="240"/>
                    <GridViewColumn Header="Postal Code" DisplayMemberBinding="{Binding PostalCode}" Width="240"/>
                    <GridViewColumn Header="City" DisplayMemberBinding="{Binding City}" Width="240"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2" Margin="20" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Customers" Command="{Binding NavigateToCustomersCommand}" Height="50" Width="150" Margin="2" Background="WhiteSmoke" Foreground="Black"/>
            <Button Grid.Column="1" Content="Roles" Command="{Binding NavigateToRolesCommand}" Height="50" Width="150" Margin="2" Background="WhiteSmoke" Foreground="Black"/>
            <Button Grid.Column="2" Content="Addresses" Command="{Binding NavigateToAddressesCommand}" Height="50" Width="150" Margin="2" Background="LavenderBlush" Foreground="Black"/>
        </Grid>
    </Grid>
</UserControl>
